<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/search_bike_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/blue_bike_sport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_bike_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ratings: "
        app:layout_constraintStart_toStartOf="@+id/search_bike_image"
        app:layout_constraintTop_toBottomOf="@+id/search_bike_image" />

    <TextView
        android:id="@+id/search_bike_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available:"
        app:layout_constraintStart_toStartOf="@+id/search_bike_image"
        app:layout_constraintTop_toBottomOf="@+id/search_bike_ratings" />

    <TextView
        android:id="@+id/search_bike_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_location"
        app:layout_constraintStart_toStartOf="@+id/search_bike_image"
        app:layout_constraintTop_toBottomOf="@+id/search_bike_available" />

    <TextView
        android:id="@+id/search_bike_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        app:layout_constraintStart_toStartOf="@+id/search_bike_location"
        app:layout_constraintTop_toBottomOf="@+id/search_bike_location" />

    <TextView
        android:id="@+id/search_bike_combo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Combination:"
        app:layout_constraintStart_toStartOf="@+id/search_bike_description"
        app:layout_constraintTop_toBottomOf="@+id/search_bike_description" />

    <TextView
        android:id="@+id/search_bike_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags: "
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/search_bike_image"
        app:layout_constraintTop_toBottomOf="@+id/search_bike_combo" />


</androidx.constraintlayout.widget.ConstraintLayout>