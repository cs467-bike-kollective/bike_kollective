<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BikeProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profile_toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:padding="20dp"
            app:srcCompat="@drawable/ic_close_black"
            tools:layout_editor_absoluteX="302dp"
            tools:layout_editor_absoluteY="13dp"
            android:contentDescription="close bike profile"
            tools:ignore="HardcodedText" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/bike_profile_image_view"
        android:layout_width="312dp"
        android:layout_height="223dp"
        android:contentDescription="picture of bike"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_toolbar2"
        app:srcCompat="@drawable/blue_bike_sport"
        tools:ignore="HardcodedText" />

    <RatingBar
        android:id="@+id/bike_profile_rating"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bike_profile_image_view" />

    <TextView
        android:id="@+id/bike_profile_description"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_number"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A6A5A5"
        android:text="Checkout"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bike_profile_location"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/bike_profile_location"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bike_profile_description"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/review_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0 reviews"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bike_profile_rating" />

</androidx.constraintlayout.widget.ConstraintLayout>